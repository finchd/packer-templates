{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=us keyboard-configuration/variant=us console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 65536,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=us keyboard-configuration/variant=us console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": "{{ user `headless` }}",
      "disk_size": 65536,
      "guest_os_type": "ubuntu-64",
      "http_directory": "http",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
      "tools_upload_flavor": "linux",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/gitconfig",
      "destination": "/tmp/gitconfig"
    },
    {
      "type": "file",
      "source": "files/gitignore_global",
      "destination": "/tmp/gitignore_global"
    },
    {
      "type": "file",
      "source": "files/root-zsh-theme.zsh-theme",
      "destination": "/tmp/root-zsh-theme.zsh-theme"
    },
    {
      "type": "file",
      "source": "files/root-zshrc",
      "destination": "/tmp/root-zshrc"
    },
    {
      "type": "file",
      "source": "files/vagrant-zsh-theme.zsh-theme",
      "destination": "/tmp/vagrant-zsh-theme.zsh-theme"
    },
    {
      "type": "file",
      "source": "files/vagrant-zshrc",
      "destination": "/tmp/vagrant-zshrc"
    },
    {
      "type": "file",
      "source": "files/vagrant_bash_profile",
      "destination": "/tmp/vagrant_bash_profile"
    },
    {
      "type": "file",
      "source": "files/root_bash_profile",
      "destination": "/tmp/root_bash_profile"
    },
    {
      "type": "file",
      "source": "files/vagrant_zsh_history",
      "destination": "/tmp/vagrant_zsh_history"
    },
    {
      "type": "file",
      "source": "files/root_zsh_history",
      "destination": "/tmp/root_zsh_history"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/build_time.sh",
            "scripts/apt.sh",
            "scripts/virtualbox.sh",
            "scripts/sudo.sh",
            "scripts/vagrant.sh",
            "scripts/base.sh",
            "scripts/git.sh",
            "scripts/zsh.sh",
            "scripts/bash.sh",
            "scripts/vim.sh",
            "scripts/cleanup.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/build_time.sh",
            "scripts/apt.sh",
            "scripts/vmware_fusion.sh",
            "scripts/sudo.sh",
            "scripts/vagrant.sh",
            "scripts/base.sh",
            "scripts/git.sh",
            "scripts/zsh.sh",
            "scripts/bash.sh",
            "scripts/vim.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "packer_ubuntu-14.04-server-amd64-{{.Provider}}.box"
    }
  ]
}