{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait><wait><wait><wait><wait><wait><wait>"
      ],
      "boot_wait": "45s",
      "disk_size": 65536,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "27ae5170b85576e632ed91eac54c136bb00c4084ea294365b93fc0f734810fb5",
