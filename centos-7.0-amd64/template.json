{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "15s",
      "disk_size": 65536,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "df6dfdd25ebf443ca3375188d0b4b7f92f4153dc910b17bccc886bd54a7b7c86",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.cat.pdx.edu/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "guest_additions_url": "https://www.virtualbox.org/download/testcase/VBoxGuestAdditions_4.3.13-94832.iso",
      "guest_additions_sha256": "7a00c05b85787fa2837b85dfb00ffe674b902810a53fcdb9a32e1526befb7d4f",
      "ssh_username": "veewee",
      "ssh_password": "veewee",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'veewee'|sudo -S sh 'shutdown.sh'",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "15s",
      "disk_size": 65536,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "df6dfdd25ebf443ca3375188d0b4b7f92f4153dc910b17bccc886bd54a7b7c86",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.cat.pdx.edu/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
      "ssh_username": "veewee",
      "ssh_password": "veewee",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'veewee'|sudo -S sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/gitconfig",
      "destination": "/tmp/gitconfig"
    },
    {
      "type": "file",
      "source": "files/gitignore_global",
      "destination": "/tmp/gitignore_global"
    },
    {
      "type": "file",
      "source": "files/root-zsh-theme.zsh-theme",
      "destination": "/tmp/root-zsh-theme.zsh-theme"
    },
    {
      "type": "file",
      "source": "files/root-zshrc",
      "destination": "/tmp/root-zshrc"
    },
    {
      "type": "file",
      "source": "files/vagrant-zsh-theme.zsh-theme",
      "destination": "/tmp/vagrant-zsh-theme.zsh-theme"
    },
    {
      "type": "file",
      "source": "files/vagrant-zshrc",
      "destination": "/tmp/vagrant-zshrc"
    },
    {
      "type": "file",
      "source": "files/vagrant_bash_profile",
      "destination": "/tmp/vagrant_bash_profile"
    },
    {
      "type": "file",
      "source": "files/root_bash_profile",
      "destination": "/tmp/root_bash_profile"
    },    
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/yum.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/git.sh",
        "scripts/zsh.sh",
        "scripts/bash.sh",
        "scripts/vim.sh",
        "scripts/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'veewee'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'veewee'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "packer_centos-7.0-amd64_{{.Provider}}.box"
    }
  ]
}