{ 
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40000,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "af224223de99e2a730b67d7785b657f549be0d63221188e105445f75fb8305c9",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.5-server-amd64.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40000,
      "guest_os_type": "ubuntu-64",
      "http_directory": "http",
      "iso_checksum": "af224223de99e2a730b67d7785b657f549be0d63221188e105445f75fb8305c9",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.5-server-amd64.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/gitconfig",
      "destination": "/tmp/gitconfig"
    },
    {
      "type": "file",
      "source": "files/gitignore_global",
      "destination": "/tmp/gitignore_global"
    },
    {
      "type": "file",
      "source": "files/root-zsh-theme.zsh-theme",
      "destination": "/tmp/root-zsh-theme.zsh-theme"
    },
    {
      "type": "file",
      "source": "files/root-zshrc",
      "destination": "/tmp/root-zshrc"
    },
    {
      "type": "file",
      "source": "files/vagrant-zsh-theme.zsh-theme",
      "destination": "/tmp/vagrant-zsh-theme.zsh-theme"
    },
    {
      "type": "file",
      "source": "files/vagrant-zshrc",
      "destination": "/tmp/vagrant-zshrc"
    },
    {
      "type": "file",
      "source": "files/vagrant_bash_profile",
      "destination": "/tmp/vagrant_bash_profile"
    },
    {
      "type": "file",
      "source": "files/root_bash_profile",
      "destination": "/tmp/root_bash_profile"
    },    
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "script": "scripts/virtualbox.sh",
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      }
    },
    {
      "type": "shell",
      "only": ["vmware-iso"],
      "script": "scripts/vmfusion.sh",
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      }
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/apt.sh",
        "scripts/git.sh",
        "scripts/zsh.sh",
        "scripts/vim.sh",
        "scripts/bash.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"        
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "packer_ubuntu-12.04-server-amd64_{{.Provider}}.box"
    }
  ]
}